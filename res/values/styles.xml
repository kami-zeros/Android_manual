<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 以下是My，弹出对话框 -->
    <style name="mydialogstyle" parent="android:Animation.Dialog">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item><!-- 进入时动画 -->
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    
    <!-- 加载进度条 -->
    <style name="my_progressbar.small" parent="@android:style/Widget.ProgressBar.Small.Inverse">
        <item name="android:indeterminateDuration">700</item>
        <item name="android:indeterminateDrawable">@drawable/progressbar_small</item>
        <item name="android:minWidth">30dip</item>
        <item name="android:maxWidth">30dip</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
        
    </style>
    
</resources>
