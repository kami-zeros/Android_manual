<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF000000"
    android:gravity="center_vertical">
    
    <ImageView 
        android:id="@+id/contentbar_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="3dp"
        android:layout_marginLeft="5dp"
        android:clickable="true"
        android:src="@drawable/database_logo"/>
    
    <TextView 
        android:id="@+id/contentbar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:text="java基础"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        />
    
    <EditText 
        android:id="@+id/contentbar_edit"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        android:hint="输入查询内容"
        android:paddingLeft="3dp"
        android:textSize="12sp"
        android:textColorHint="#FF00FF"
        android:background="#ffffffff"
        android:visibility="gone"/>
    
    <ImageView 
        android:id="@+id/contentbar_right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:src="@drawable/navibar_search_icon_search"/>

</LinearLayout>
